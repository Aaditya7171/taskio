{
  "name": "taskio-backend",
  "version": "1.0.0",
  "description": "Backend for Taskio - A modern todo list application",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "npm install --include=dev && tsc",
    "start": "node dist/server.js",
    "migrate": "ts-node src/scripts/migrate.ts",
    "prod:build": "NODE_ENV=production tsc",
    "prod:start": "NODE_ENV=production node dist/server.js",
    "prod:migrate": "NODE_ENV=production ts-node src/scripts/migrate.ts",
    "deploy": "npm run prod:build && npm run prod:migrate && npm run prod:start",
    "lint": "eslint . --ext .ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "todo",
    "task-management",
    "productivity"
  ],
  "author": "Taskio Team",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^8.1.4",
    "@stackframe/stack": "^2.8.20",
    "@types/connect-redis": "^0.0.23",
    "@types/cookie-parser": "^1.4.9",
    "@types/express-session": "^1.18.2",
    "@types/uuid": "^10.0.0",
    "aws-sdk": "^2.1490.0",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "compression": "^1.7.4",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "google-auth-library": "^10.2.0",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "redis": "^5.6.1",
    "uuid": "^11.1.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.4",
    "@types/pg": "^8.15.4",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1"
  }
}
